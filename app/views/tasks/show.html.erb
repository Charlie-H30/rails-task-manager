<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<div>
  <input type="checkbox" <%= @task.completed ? "checked" : "" %> />
  <label><%= @task.completed ? "This task is completed" : "This task is not completed" %> </label>
</div>

<p><%= link_to "Edit Task", edit_task_path %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<p><%= link_to "Back to List", tasks_path %></p>
